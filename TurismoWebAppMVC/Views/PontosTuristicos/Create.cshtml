@model TurismoWebAppMVC.Models.ViewModels.PontoTuristicoViewModel

@{
    ViewData["Title"] = "Pontos Turísticos";
}

<h2>@ViewData["Title"]</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PontoTuristico.Nome" class="control-label"></label>
                <input asp-for="PontoTuristico.Nome" class="form-control" />
                <span asp-validation-for="PontoTuristico.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PontoTuristico.EstadoId" class="control-label"></label>
                <select asp-for="PontoTuristico.EstadoId" asp-items="@(new SelectList(Model.Estados, "Id", "UF")) " class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="PontoTuristico.Descricao" class="control-label"></label>
                <input asp-for="PontoTuristico.Descricao" class="form-control" />
                <span asp-validation-for="PontoTuristico.Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
